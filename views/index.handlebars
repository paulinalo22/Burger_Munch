{{!-- * Setup the `index.handlebars` to have the template that Handlebars can render onto. --}}
{{!-- * Create a button in `index.handlebars` that will submit the user input into the database. --}}

{{!-- place image of a burger centered here --}}
<div class="row mx-auto">
  <img src="/assets/img/test.jpg" alt="test image">
  <h1 class="mx-auto"> Let's MUNCH some burgers, y'all! </h1>
</div>

<div class="row">
  <div class="col mx-auto">
    <ul id="uneaten">
      <h2> Not Eaten </h2>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col mx-auto">
    <ul id="eaten">
      <h2>Eaten </h2>
      {{#each burgers}}
      {{#if devoured}}
      {{!-- > means you're looking in the partials directory --}}
      {{> burgers/burger-block devoured=true}}
      {{/if}}
      {{/each}}
    </ul>
  </div>

</div>

<div class="row mx-auto">
  <h3>Enter a burger you want to MUNCH and then click the "Submit" button.</h3>
  <form class="create-form mx-auto">
    <div class="form-group mx-auto">
      <input type="text" id="newBurger" name="burger_name">
    </div>
    <button type="submit" id="btn">Submit</button>
  </form>


</div>